{
  "extends": "../../tsconfig.packages.build.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "rootDir": "src",
    // NOTE: @msgpack/msgpack uses Uint8Array<ArrayBuffer> which requires TypeScript 5.7+.
    // skipLibCheck bypasses type-checking of .d.ts files in node_modules.
    "skipLibCheck": true
  },
  "references": [
    { "path": "../keyring-utils/tsconfig.build.json" }
  ],
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.test.ts"]
}
