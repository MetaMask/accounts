{
  "extends": "../../tsconfig.packages.build.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    // FIXME: We should investigate how to get rid of this flag, as this will turn off type
    // checking for all *.d.ts files
    "skipLibCheck": true,
    "lib": ["ES2020"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "es2020"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.test.ts"]
}
